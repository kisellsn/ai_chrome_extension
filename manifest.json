{
  "manifest_version": 3,
  "name": "Pocket AI",
  "version": "1.0",
  "description": "Ask questions to an AI",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"]
}